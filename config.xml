<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smart.droid.riddles" version="0.0.1" android-versionCode="1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="https://cordova.apache.org/ns/1.0">
    <name>Riddle</name>
    <description>
        Riddles - A Sweet and Short Android App
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        SmartDroidies Team 
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!--icon src="res/android/samayal-ldpi.png" density="ldpi" /-->
        <icon src="res/android/pudhir-mdpi.png" density="mdpi" />
        <icon src="res/android/pudhir-hdpi.png" density="hdpi" />
        <icon src="res/android/pudhir-xhdpi.png" density="xhdpi" />
        <icon src="res/android/pudhir-xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/pudhir-xxxhdpi.png" density="xxxhdpi" />        

        <splash src="res/screen/android/splash.png"/>
        
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="7000" />
    <preference name="AutoHideSplashScreen" value="false" />

</widget>
